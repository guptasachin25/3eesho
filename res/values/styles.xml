<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/login_button_color_selector</item>
        <item name="android:background">@drawable/login_button_selector</item>
    </style>

    <style name="ContinueButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/login_button_color_selector</item>
        <item name="android:background">@drawable/transparent_button</item>
    </style>

    <style name="EditTextStyleLogin" parent="@android:style/Widget.EditText">
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#21B7A8</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="EditTextDataEntry" parent="@android:style/Widget.EditText">
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#21B7A8</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

</resources>