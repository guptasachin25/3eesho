<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/LLImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/onboard_header_image" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:text="We will help you run.."
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Tell us about your target"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/onboard_progress_3"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/etProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Sachin&apos;s Target"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivTargetWeightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:scaleType="fitXY"
        android:src="@drawable/icon_loseweight_inactive" />

    <EditText
        android:id="@+id/etWeightTarget"
        style="@style/EditTextDataEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivTargetWeightIcon"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ivTargetWeightIcon"
        android:hint="Target Distance (miles)"
        android:onClick="onClick" >

        <requestFocus />
    </EditText>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/etWeightTarget"
        android:layout_alignRight="@+id/etWeightTarget"
        android:layout_below="@+id/etWeightTarget"
        android:alpha="0.25"
        android:background="#000000" />

    <ImageView
        android:id="@+id/ivTargetTimeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/etWeightTarget"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_time_inactive" />

    <EditText
        android:id="@+id/etTargetTime"
        style="@style/EditTextDataEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etWeightTarget"
        android:layout_alignRight="@+id/etWeightTarget"
        android:layout_alignTop="@+id/ivTargetTimeIcon"
        android:layout_marginBottom="12dp"
        android:hint="Target Time (months)"
        android:onClick="onClick" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/etTargetTime"
        android:layout_alignRight="@+id/etTargetTime"
        android:layout_below="@+id/etTargetTime"
        android:alpha="0.25"
        android:background="#000000" />

    <Button
        android:id="@+id/btnContinue"
        style="@style/ContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:enabled="false"
        android:fontFamily="sans-serif"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClick"
        android:text="CONTINUE"
        android:textSize="20dp"
        android:typeface="serif" />

</RelativeLayout>