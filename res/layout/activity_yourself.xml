<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/LLImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/onboard_header_image" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="135dp"
            android:typeface="serif"
            android:text="Hello!!"
            android:textSize="24dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv1"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="3dp"
            android:typeface="serif"
            android:textSize="18dp"
            android:text="Can you tell us about yourself?"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
        android:layout_below="@+id/LLImage"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@drawable/onboard_progress_1" >
    </LinearLayout>

    
    <EditText
        android:id="@+id/etHeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout1"
		android:layout_marginTop="50dp"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:typeface="serif"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:textSize="12dp"
        android:inputType="textNoSuggestions"
        android:hint="Height (cms)" >
        <requestFocus/>
    </EditText>
    
    <EditText
        android:id="@+id/etWeight"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/etHeight"
        android:layout_alignRight="@+id/etHeight"
        android:layout_below="@+id/etHeight"
        android:layout_marginTop="12dp"
        android:typeface="serif"
		android:onClick="onClick"
		android:textSize="12dp"
		android:inputType="textNoSuggestions"
        android:hint="Weight (lbs)"
        android:ems="10" />
    
    <EditText
        android:id="@+id/etActivityLevel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etWeight"
        android:layout_alignRight="@+id/etHeight"
        android:layout_below="@+id/etWeight"
        android:layout_marginTop="12dp"
        android:typeface="serif"
        android:inputType="textNoSuggestions"
        android:ems="10"
        android:onClick="onClick"
        android:textSize="12dp"
        android:hint="Activity Level" >
</EditText>

    <TextView
        android:id="@+id/etProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="Profile" />

    <ImageView
        android:id="@+id/ivHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   		android:layout_alignLeft="@+id/etProfile"
   		android:layout_alignTop="@+id/etActivityLevel"
        android:src="@drawable/ic_heart" />
  
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
		android:layout_centerHorizontal="true"
		android:textColor="#000000"
		android:typeface="serif"
		android:textSize="20dp"
		android:onClick="onClick"
        android:text="Continue" />

    <ImageView
        android:id="@+id/ivHeightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etHeight"
        android:layout_alignBottom="@+id/etHeight"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="11dp"
        android:src="@drawable/ic_height_inactive" />

    <ImageView
        android:id="@+id/ivWeightIcon"
        android:layout_width="25dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivHeart"
        android:layout_alignBottom="@+id/etWeight"
        android:layout_marginBottom="2dp"
        android:src="@drawable/icon_weight_inactive" />

</RelativeLayout>