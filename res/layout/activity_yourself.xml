<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/LLImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/onboard_header_image" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Hello Sachin."
     			android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can you tell us about yourself?"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/onboard_progress_1"
        android:orientation="horizontal" >
    </LinearLayout>

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Height (cms)"
        android:inputType="textNoSuggestions"
        android:onClick="onClick"
        android:textSize="12dp"
        android:typeface="serif" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etHeight"
        android:layout_alignRight="@+id/etHeight"
        android:layout_below="@+id/etHeight"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Weight (lbs)"
        android:inputType="textNoSuggestions"
        android:onClick="onClick"
        android:textSize="12dp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/etActivityLevel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etWeight"
        android:layout_alignRight="@+id/etHeight"
        android:layout_below="@+id/etWeight"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Activity Level"
        android:inputType="textNoSuggestions"
        android:onClick="onClick"
        android:textSize="12dp"
        android:typeface="serif" >
    </EditText>

    <TextView
        android:id="@+id/etProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Sachin's Profile"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:alpha="0.87"
        android:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/ivHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etProfile"
        android:layout_alignTop="@+id/etActivityLevel"
        android:src="@drawable/ic_heart" />

    <Button
        android:id="@+id/btnContinue"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        
        android:onClick="onClick"
        android:text="CONTINUE"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/ivHeightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/etHeight"
        android:layout_marginLeft="11dp"
        android:src="@drawable/ic_height_inactive" />

    <ImageView
        android:id="@+id/ivWeightIcon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etWeight"
        android:layout_alignLeft="@+id/ivHeart"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_weight_inactive" />

</RelativeLayout>