<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/LLImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/onboard_header_image" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Hello Sachin."
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Can you tell us about yourself?"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/onboard_progress_1"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/etProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Sachin&apos;s Profile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivHeightIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:scaleType="fitXY"
        android:src="@drawable/icon_height_inactive" />

    <EditText
        android:id="@+id/etHeight"
        style="@style/EditTextDataEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivHeightIcon"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ivHeightIcon"
        android:hint="Height (cms)"
        android:onClick="onClick" >

        <requestFocus />
    </EditText>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/etHeight"
        android:layout_alignRight="@+id/etHeight"
        android:layout_below="@+id/etHeight"
        android:alpha="0.25"
        android:background="#000000" />

    <ImageView
        android:id="@+id/ivWeightIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/etHeight"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_weight_inactive" />

    <EditText
        android:id="@+id/etWeight"
        style="@style/EditTextDataEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etHeight"
        android:layout_alignRight="@+id/etHeight"
        android:layout_alignTop="@+id/ivWeightIcon"
        android:layout_marginBottom="12dp"
        android:hint="Weight (lbs)"
        android:onClick="onClick" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/etWeight"
        android:layout_alignRight="@+id/etWeight"
        android:layout_below="@+id/etWeight"
        android:alpha="0.25"
        android:background="#000000" />

    
    <ImageView
        android:id="@+id/ivActivityIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@id/ivWeightIcon"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_activity_inactive" />
    
    
    <EditText
        android:id="@+id/etActivityLevel"
        style="@style/EditTextDataEntry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etWeight"
        android:layout_alignRight="@+id/etWeight"
        android:layout_alignTop="@+id/ivActivityIcon"
        android:layout_marginBottom="12dp"
        android:hint="Activity Level"
        android:onClick="onClick" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/etActivityLevel"
        android:layout_alignRight="@+id/etActivityLevel"
        android:layout_below="@+id/etActivityLevel"
        android:alpha="0.25"
        android:background="#000000" />

   

    <Button
        android:id="@+id/btnContinue"
        style="@style/NiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:onClick="onClick"
        android:text="CONTINUE"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="serif" />

</RelativeLayout>