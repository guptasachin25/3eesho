<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="5dp">
            
   	    <ImageView
     		android:id="@+id/imageView1"
       		android:layout_width="60dp"
        	android:layout_height="60dp"
        	android:layout_marginTop="24dp"
        	android:contentDescription="@string/iv_UserProfile_Image_contentdescription"
        	android:src="@drawable/ic_profile" />
    
    	<EditText
        	android:id="@+id/etuserProfilename"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
       	 	android:ems="10"
        	android:hint="@string/et_userName"
        	android:inputType="text"
        	android:background="@android:color/transparent"
        	android:gravity="center"
        	android:textSize="20sp"/>
    
    	<EditText
       	 	android:id="@+id/etuserProfileProfession"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:hint="@string/et_User_Profession"
        	android:inputType="text"
        	android:background="@android:color/transparent"
        	android:gravity="center"
        	android:textSize="18sp"/>

     	<EditText
         	android:id="@+id/etuserProfileLocation"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:ems="10"
         	android:gravity="center"
         	android:hint="@string/et_user_location"
         	android:inputType="text"
         	android:background="@android:color/transparent"
         	android:textSize="16sp" />

    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvuserProfileEmaillabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_userProfileEmailLabel"
            android:gravity="left"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etuserProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:enabled="false"
            android:text="@string/hint_email"
            android:inputType="textWebEmailAddress"
            android:background="@android:color/transparent"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvuserProfilePhoneLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_userProfilePhoneLabel"
            android:gravity="left"
            android:textSize="15sp" />
        
        <EditText
            android:id="@+id/etuserProfilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/hint_phonenumber"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
 
        <TextView
            android:id="@+id/tvusergenderlabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_genderlabel"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/tvusergender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/hint_gender"
            android:textSize="15sp" />
        
    </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
 
        <TextView
            android:id="@+id/tvuserProfileWeightLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_userWeightLabel"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/tvuserProfileWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/sphint_weight"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
 
        <TextView
            android:id="@+id/tvuserProfileHeightLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_userHeightLabel"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/tvuserProfileHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/sphint_height"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
 
        <TextView
            android:id="@+id/tvuserProfileDietHabitLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_userDietHabitLabel"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/tvuserProfileDietHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/hint_diethabit"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
 
        <TextView
            android:id="@+id/tvuserProfileTargetLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/tv_userProfileTargetLabel"
            android:textSize="15sp" />
        
        <EditText
            android:id="@+id/tvuserProfileTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="@string/tv_usertargetgoal"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:textSize="15sp" />
        
    </LinearLayout>

    
</LinearLayout>

