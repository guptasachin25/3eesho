<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#506f7b" >

        <com.codepath.eesho.utils.CircularImageView
            android:id="@+id/ivPicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/buzz2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billy Bob"
            android:textColor="#FFF"
            android:layout_toRightOf="@+id/ivPicture"
            android:layout_alignTop="@+id/ivPicture"
            android:textSize="18sp"
            android:typeface="serif"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run full marathon in 3 months"
            android:textColor="#FFF"
            android:layout_alignLeft="@+id/tvName"
            android:layout_alignBottom="@+id/ivPicture"
            android:textSize="12sp"
            android:typeface="serif"/>

    </RelativeLayout>

    <LinearLayout
        android:background="#5a7e8c"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            
   			<RelativeLayout
                android:layout_width="90dp"
            	android:layout_height="match_parent"
            	android:layout_gravity="center">
            	
            	<ImageView
		            android:id="@+id/ivGraph"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:src="@drawable/ic_bargraph" 
		            android:layout_centerVertical="true"/>

            	<TextView
            	    android:id="@+id/tvProgress"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_alignBottom="@+id/ivGraph"
            	    android:layout_marginBottom="7dp"
            	    android:text="88"
            	    android:layout_toRightOf="@+id/ivGraph"
            	    android:textSize="20sp"
            	    android:textColor="#FFFFFF" 
            	    android:layout_centerVertical="true"/>
            	
            	<TextView
            	    android:id="@+id/tvProgressTxt"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:text="PROGRESS"
            	    android:layout_below="@+id/tvProgress"
            	    android:layout_centerVertical="true"
            	    android:layout_centerHorizontal="true"
            	    android:textSize="10sp" 
            	    android:textColor="#FFF"/>
            	
            </RelativeLayout>         
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="goToActivityHistory" >
			
            <RelativeLayout
                android:layout_width="90dp"
            	android:layout_height="match_parent"
            	android:layout_gravity="center">
            	
            	<ImageView
		            android:id="@+id/ivActivity"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:src="@drawable/ic_activity" 
		            android:layout_centerVertical="true"/>

            	<TextView
            	    android:id="@+id/tvActivity"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_alignBottom="@+id/ivActivity"
            	    android:text="60"
            	    android:layout_toRightOf="@+id/ivActivity"
            	    android:textSize="20sp"
            	    android:textColor="#FFFFFF"
            	    android:layout_marginBottom="7sp" 
            	    android:layout_centerVertical="true"/>
            	
            	<TextView
            	    android:id="@+id/tvActivityText"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:text="ACTIVITY"
            	    android:layout_below="@+id/tvActivity"
            	    android:layout_centerVertical="true"
            	    android:layout_centerHorizontal="true"
            	    android:textSize="10sp" 
            	    android:textColor="#FFF"/>
            </RelativeLayout>    
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#02c1d7"
        >
        
        <TextView
            android:id="@+id/tvWeekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp" 
            android:layout_marginTop="2sp"
            android:typeface="serif"
            android:layout_marginBottom="2sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvGoals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp">
    </ListView>

</LinearLayout>