<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#506f7b" >

        <com.codepath.eesho.utils.CircularImageView
            android:id="@+id/ivPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/buzz2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billy Bob"
            android:textColor="#FFF"
            android:layout_toRightOf="@+id/ivPicture"
            android:layout_alignTop="@+id/ivPicture"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run full marathon in 3 months"
            android:textColor="#FFF"
            android:layout_toRightOf="@+id/ivPicture"
            android:layout_alignBottom="@+id/ivPicture"
            android:textSize="12sp"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#02c1d7"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandableListView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ExpandableListView>

</LinearLayout>
